@page
@model YouView.Pages.Create
@{
    ViewData["Title"] = "Upload Video";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload - YouView</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">YouView Studio</h4>
            </div>
            <div class="card-body">
                
                @if (!string.IsNullOrEmpty(Model.Message) && Model.Message.Contains("successfully"))
                {
                    <div class="text-center py-5">
                        <h1 class="display-1 text-success">âœ”</h1>
                        <h3>Upload Complete!</h3>
                        <p class="text-muted">Your video is now live and ready to watch.</p>
                        <button onclick="window.close()" class="btn btn-secondary mt-3">Close Window</button>
                    </div>
                }
                else
                {
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger">@Model.Message</div>
                    }

                    <form method="post" enctype="multipart/form-data" onsubmit="showUploadingUI()">
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" required placeholder="My Awesome Video" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Tell viewers about your video"></textarea>
                        </div>
                        
                        <div class="mb-3">
                             <label asp-for="PrivacyStatus" class="form-label">Privacy</label>
                             <select asp-for="PrivacyStatus" class="form-select">
                                <option value="Public">Public</option>
                                <option value="Private">Private</option>
                                <option value="Unlisted">Unlisted</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Video File</label>
                            <input asp-for="VideoFile" type="file" accept="video/*" class="form-control" required />
                            <div class="form-text">Supported: MP4, MKV, AVI.</div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">Thumbnail (Optional)</label>
                            <input asp-for="ThumbnailFile" type="file" accept="image/*" class="form-control" />
                            <div class="form-text text-muted">
                                If you leave this empty, we will auto-generate one for you! ðŸ“¸
                            </div>
                        </div>

                        <div class="d-grid" id="uploadSection">
                            <button type="submit" class="btn btn-primary btn-lg">ðŸš€ Upload Video</button>
                        </div>
                        
                        <div id="progressSection" class="d-none text-center py-4">
                            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h5 class="mt-3">Uploading & Processing...</h5>
                            <p class="text-danger small">Do not close this window until finished.</p>
                        </div>

                    </form>
                }
            </div>
        </div>
    </div>

    <script>
        function showUploadingUI() {
            // Hide the submit button, show the spinner
            document.getElementById('uploadSection').classList.add('d-none');
            document.getElementById('progressSection').classList.remove('d-none');
        }
    </script>
</body>
</html>