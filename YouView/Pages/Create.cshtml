@page
@model YouView.Pages.Create
@{
    ViewData["Title"] = "Upload Video";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload - YouView</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #F8F7F4; /* Light background */
            color: #222;
            font-family: 'Roboto', sans-serif;
        }

        .card {
            background-color: white; /* White card */
            border: 1px solid #ddd;
            border-radius: 15px;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid #eee;
            padding: 20px;
        }

        .form-control, .form-select {
            background-color: white;
            border: 1px solid #ccc;
            color: #222;
        }

        .form-control:focus, .form-select:focus {
            background-color: white;
            border-color: #0d6efd;
            color: #222;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .form-control::placeholder {
            color: #888;
        }

        .form-label {
            color: #444;
            font-weight: 500;
        }

        .form-text {
            color: #666 !important;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            color: white;
            font-weight: 500; /* Regular weight */
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: white;
            font-weight: 500; 
        }

        .btn-secondary:hover {
            background-color: #5c636a;
        }

        /* Custom file input styling */
        input[type="file"]::file-selector-button {
            background-color: #f0f0f0;
            color: #333;
            border: 1px solid #ccc;
            padding: 8px 16px;
            margin-right: 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.2s;
        }

        input[type="file"]::file-selector-button:hover {
            background-color: #e0e0e0;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="card shadow-lg">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Upload Video</h5>
                <button type="button" class="btn-close" onclick="window.close()" aria-label="Close"></button>
            </div>
            <div class="card-body p-4">
                
                @if (!string.IsNullOrEmpty(Model.Message) && Model.Message.Contains("successfully"))
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h3>Upload Complete!</h3>
                        <p class="text-muted mb-4">Your video is now live and ready to watch.</p>
                        <button onclick="window.close()" class="btn btn-secondary px-4 rounded-pill">Close Window</button>
                    </div>
                }
                else
                {
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger">@Model.Message</div>
                    }

                    <form method="post" enctype="multipart/form-data" onsubmit="showUploadingUI()">
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title (required)</label>
                            <input asp-for="Title" class="form-control" required placeholder="Add a title that describes your video" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Tell viewers about your video"></textarea>
                        </div>
                        
                        <div class="mb-3">
                             <label asp-for="PrivacyStatus" class="form-label">Visibility</label>
                             <select asp-for="PrivacyStatus" class="form-select">
                                <option value="Public">Public</option>
                                <option value="Private">Private</option>
                                <option value="Unlisted">Unlisted</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Video File</label>
                            <input asp-for="VideoFile" type="file" accept="video/*" class="form-control" required />
                            <div class="form-text">Supported formats: MP4, MKV, AVI.</div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">Thumbnail</label>
                            <input asp-for="ThumbnailFile" type="file" accept="image/*" class="form-control" />
                            <div class="form-text">
                                If you leave this empty, we will auto-generate one for you! ðŸ“¸
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-2" id="uploadSection">
                            <button type="button" class="btn btn-secondary rounded-pill px-3" onclick="window.close()">Cancel</button>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">Upload</button>
                        </div>
                        
                        <div id="progressSection" class="d-none text-center py-4">
                            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h5 class="mt-3">Uploading...</h5>
                            <p class="text-muted small">Please keep this window open until the upload completes.</p>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>

    <script>
        function showUploadingUI() {
            // Hide the submit button, show the spinner
            document.getElementById('uploadSection').classList.add('d-none');
            document.getElementById('progressSection').classList.remove('d-none');
        }
    </script>
</body>
</html>