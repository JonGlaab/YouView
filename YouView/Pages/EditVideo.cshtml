@page "{id:int}"
@model YouView.Pages.EditVideoModel
@{
    ViewData["Title"] = "Edit Video";
}

<style>
    /* Match the off-white background from other pages */
    body {
        background-color: #F8F7F4; 
    }

    .edit-card {
        background-color: #1F1F1F;
        border-radius: 20px;
        padding: 30px;
        color: white;
        border: none;
    }

    .form-label {
        color: #ddd;
        font-weight: 600;
    }

    .form-control, .form-select {
        background-color: #2C2C2C;
        border: 1px solid #444;
        color: white;
        border-radius: 10px;
    }

    .form-control:focus, .form-select:focus {
        background-color: #333;
        color: white;
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .form-control[type="file"] {
        background-color: #2C2C2C;
        color: #aaa;
    }
    
    .input-group-text {
        background-color: #444;
        color: white;
        border-color: #444;
    }

    .danger-zone {
        border: 1px solid #dc3545;
        background-color: rgba(220, 53, 69, 0.1);
        border-radius: 20px;
        padding: 20px;
        margin-top: 30px;
    }

    .danger-title {
        color: #dc3545;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            
            <h2 class="fw-bold mb-4 text-dark">Edit Video Details</h2>

            <div class="edit-card shadow-lg">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Video.VideoId" />

                    <div class="mb-4 text-center">
                        <label class="form-label d-block mb-2">Thumbnail Preview</label>
                        <div class="ratio ratio-16x9 mb-3 rounded overflow-hidden border border-secondary">
                            <img src="@Model.Video.ThumbnailUrl" class="img-fluid object-fit-cover" alt="Current Thumbnail">
                        </div>
                        
                        <div class="input-group">
                            <label class="input-group-text" for="thumbnailUpload"><i class="bi bi-image me-2"></i>Change</label>
                            <input type="file" class="form-control" id="thumbnailUpload" asp-for="NewThumbnail" accept="image/*">
                        </div>
                        <span asp-validation-for="NewThumbnail" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Video.Title" class="form-label">Video Title</label>
                        <input asp-for="Video.Title" class="form-control form-control-lg" placeholder="Enter a catchy title..." />
                        <span asp-validation-for="Video.Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Video.Description" class="form-label">Description</label>
                        <textarea asp-for="Video.Description" class="form-control" rows="6" placeholder="Tell viewers about your video..."></textarea>
                        <span asp-validation-for="Video.Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Video.PrivacyStatus" class="form-label">Privacy Setting</label>
                        <select asp-for="Video.PrivacyStatus" class="form-select" asp-items="Html.GetEnumSelectList<YouView.Models.PrivacyStatus>()"></select>
                        <span asp-validation-for="Video.PrivacyStatus" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <a asp-page="/MyVideos" class="btn btn-outline-light px-4 rounded-pill">Cancel</a>
                        <button type="submit" class="btn btn-primary px-5 rounded-pill fw-bold shadow-sm">Save Changes</button>
                    </div>
                </form>
            </div>
            
            <div class="danger-zone">
                <h5 class="danger-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Danger Zone</h5>
                <p class="text-muted small mb-3">Once you delete a video, there is no going back. Please be certain.</p>
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" value="@Model.Video.VideoId" />
                    <button type="submit" class="btn btn-danger rounded-pill px-4" onclick="return confirm('Are you sure you want to delete this video? This action cannot be undone.');">
                        Delete Video
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}