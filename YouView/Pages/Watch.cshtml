@page "{id:int}"
@model YouView.Pages.WatchModel
@{
ViewData["Title"] = Model.Video.Title;
}

<style>
   
    /* Global Page Styles */
    body {
        background-color: #F8F7F4;
    }

    /* The Dark Video Player Card (Mockup Style) */
    .player-card {
        background-color: #2C2C2C; /* Dark Grey */
        border-radius: 25px;
        padding: 20px;
        color: white;
        margin-bottom: 20px;
    }

    .video-wrapper {
        width: 100%;
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 15px;
        background-color: black;
        position: relative;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
    }

    /* MODIFIED: Added specific selector to ensure it plays nice with the ad overlay */
    video#content-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain; /* Ensures black bars if aspect ratio doesn't match */
    }

    /* The Control Bar (Like/Dislike/Play) */
    .player-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 15px;
    }

    .icon-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.8rem;
        cursor: pointer;
        transition: transform 0.1s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .icon-btn:hover {
        transform: scale(1.1);
        color: #ddd;
    }

    .icon-btn.active {
        color: #3ea6ff; /* Blue for active like/dislike */
    }

    .count-text {
        font-size: 1rem;
        font-weight: bold;
    }

    /* The AI Summary Card (Right Column) */
    .summary-card {
        background-color: #F8F7F4;
        border: 2px solid #2C2C2C;
        border-radius: 25px;
        padding: 25px;
        color: #2C2C2C;
        height: fit-content; /* Only as tall as the text needs */
    }

    .summary-title {
        font-weight: 800;
        font-size: 1.4rem;
        margin-bottom: 15px;
        line-height: 1.2;
    }

    /* Video Info and Comments (Below the Player) */
    .video-info-section {
        padding: 0 10px;
    }

    .uploader-badge {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
    }

    .profile-placeholder {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #2C2C2C;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        overflow: hidden; /* Ensure image doesn't spill out */
    }

    .profile-placeholder img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .comment-list {
        margin-top: 30px;
        border-top: 1px solid #ddd;
        padding-top: 20px;
    }

    .comment-item {
        margin-bottom: 20px;
        display: flex;
        gap: 15px;
    }
    

    /* The Custom Play Button Overlay (Only for Free Users) */
    .play-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0,0,0,0.4); 
        cursor: pointer;
        z-index: 200; 
        transition: opacity 0.3s;
    }

    .play-icon-large {
        font-size: 5rem;
        color: white;
        opacity: 0.9;
        filter: drop-shadow(0 0 10px rgba(0,0,0,0.5));
        transition: transform 0.2s;
    }

    .play-overlay:hover .play-icon-large {
        transform: scale(1.1);
        color: #ff0000; /* YouTube Red style */
    }
</style>

@Html.AntiForgeryToken()

<div class="container mt-4 mb-5">
    <div class="row gx-5">

        <div class="col-lg-8">

            <div class="player-card shadow-sm">
                <div class="video-wrapper" id="video-wrapper">

                    <video id="content-video"
                           poster="@Model.Video.ThumbnailUrl"
                           @(Model.IsViewerPremium ? "controls" : "")>

                        <source src="@Model.Video.VideoUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>

                    @if (!Model.IsViewerPremium)
                    {
                    <div id="play-button-overlay" class="play-overlay">
                        <i class="bi bi-play-circle-fill play-icon-large"></i>
                    </div>

                    <div id="ad-container" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 100; pointer-events: none;"></div>
                    }

                </div>

                <div class="player-controls d-flex justify-content-between align-items-center mt-2">

                    <div class="text-white-50 small fst-italic">
                        Let us know if you liked or disliked this video!
                    </div>

                    <div class="d-flex gap-3">
                        <button class="icon-btn @(Model.UserLikeStatus == true ? "active" : "")"
                                id="btnLike"
                                onclick="toggleLike(true)"
                                title="I like this">
                            <i class="bi @(Model.UserLikeStatus == true ? "bi-hand-thumbs-up-fill" : "bi-hand-thumbs-up")"></i>
                            <span class="count-text" id="likeCount">@Model.LikeCount</span>
                        </button>

                        <button class="icon-btn @(Model.UserLikeStatus == false ? "active" : "")"
                                id="btnDislike"
                                onclick="toggleLike(false)"
                                title="I dislike this">
                            <i class="bi @(Model.UserLikeStatus == false ? "bi-hand-thumbs-down-fill" : "bi-hand-thumbs-down")"></i>
                            <span class="count-text" id="dislikeCount">@Model.DislikeCount</span>
                        </button>
                    </div>

                </div>
            </div>

            <div class="video-info-section">
                <h2 class="fw-bold mb-3">@Model.Video.Title</h2>

                <div class="uploader-badge">
                    @if(!string.IsNullOrEmpty(Model.Video.User?.ProfilePicUrl)) {
                    <img src="@Model.Video.User.ProfilePicUrl" style="width:40px;height:40px;border-radius:50%;" />
                    } else {
                    <div class="profile-placeholder">
                        @(Model.Video.User?.UserName?.Substring(0,1).ToUpper() ?? "U")
                    </div>
                    }

                    <div>
                        <div class="fw-bold">@(Model.Video.User?.UserName ?? "Unknown User")</div>
                        <small class="text-muted">Uploaded on @Model.Video.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>

                <div class="bg-light p-3 rounded-3 mt-3">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.Video.Description</p>
                </div>
            </div>

            <div class="video-info-section comment-list">
                <h4>Comments <span class="text-muted fs-6">(@(Model.Video.Comments?.Count ?? 0))</span></h4>

                @if (User.Identity.IsAuthenticated)
                {
                <form method="post" asp-page-handler="AddComment" asp-route-id="@Model.Video.VideoId" class="mb-4 mt-3">
                    <div class="d-flex gap-3">
                        <div class="profile-placeholder" style="width:35px;height:35px;font-size:0.8rem;">ME</div>
                        <div class="w-100">
                            <input type="text" name="NewCommentContent" class="form-control border-0 border-bottom rounded-0" placeholder="Add a comment..." style="background:transparent;" required>
                            <div class="d-flex justify-content-end mt-2">
                                <button type="submit" class="btn btn-sm btn-primary rounded-pill px-3">Comment</button>
                            </div>
                        </div>
                    </div>
                </form>
                }
                else
                {
                <div class="alert alert-light border mt-3 mb-4">
                    <a asp-area="Identity" asp-page="/Account/Login" asp-route-ReturnUrl="@Url.Page("/Watch", new { id = Model.Video.VideoId })">Log in</a> to leave a comment.
                </div>
                }

                @if(Model.Video.Comments != null && Model.Video.Comments.Any())
                {
                foreach(var comment in Model.Video.Comments.OrderByDescending(c => c.CreatedAt))
                {
                <div class="comment-item">
                    @if (!string.IsNullOrEmpty(comment.User?.ProfilePicUrl))
                    {
                    <div class="profile-placeholder" style="width:35px;height:35px;background:none;">
                        <img src="@comment.User.ProfilePicUrl" alt="@comment.User.UserName" />
                    </div>
                    }
                    else
                    {
                    <div class="profile-placeholder" style="width:35px;height:35px;font-size:0.8rem; background-color: #555;">
                        @(comment.User?.UserName?.Substring(0,1).ToUpper() ?? "?")
                    </div>
                    }

                    <div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-bold small">@(comment.User?.UserName ?? "Anonymous")</span>
                            <span class="text-muted small">@comment.CreatedAt.ToString("g")</span>
                        </div>
                        <p class="mb-0 mt-1">@comment.Content</p>
                    </div>
                </div>
                }
                }
                else
                {
                <p class="text-muted fst-italic">No comments yet.</p>
                }
            </div>

        </div>

        <div class="col-lg-4">
            <div class="summary-card">
                <h3 class="summary-title">AI Summary of:<br>@Model.Video.Title</h3>
                <hr style="border-top: 2px solid #2C2C2C; opacity: 1;">

                <div class="mt-3" style="font-size: 1.05rem; line-height: 1.6;">
                    @if (!string.IsNullOrEmpty(Model.Video.AiSummary))
                    {
                    @Model.Video.AiSummary
                    }
                    else
                    {
                    <p>No AI summary available.</p>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

@if (!Model.IsViewerPremium)
{
<script src="//imasdk.googleapis.com/js/sdkloader/ima3.js"></script>
<script>
    var videoContent = document.getElementById('content-video');
    var playOverlay = document.getElementById('play-button-overlay');
    var adContainer = document.getElementById('ad-container');
    var adDisplayContainer;
    var adsLoader;
    var adsManager;

    // 1. Wait for the user to click our BIG Custom Play Button
    // This fixes the "Autoplay Not Allowed" error
    playOverlay.addEventListener('click', function() {
        // Hide the button
        playOverlay.style.display = 'none';

        // Start the Ad Process
        initializeIMA();
    });

    function initializeIMA() {
        adDisplayContainer = new google.ima.AdDisplayContainer(adContainer, videoContent);

        // Essential: Tell the browser this is a user-initiated action
        adDisplayContainer.initialize();

        adsLoader = new google.ima.AdsLoader(adDisplayContainer);

        adsLoader.addEventListener(
            google.ima.AdsManagerLoadedEvent.Type.ADS_MANAGER_LOADED,
            onAdsManagerLoaded,
            false);

        adsLoader.addEventListener(
            google.ima.AdErrorEvent.Type.AD_ERROR,
            onAdError,
            false);

        var adsRequest = new google.ima.AdsRequest();
        adsRequest.adTagUrl = 'https://pubads.g.doubleclick.net/gampad/ads?' +
            'iu=/21775744923/external/single_ad_samples&sz=640x480&' +
            'cust_params=sample_ct%3Dlinear&ciu_szs=300x250%2C728x90&' +
            'gdfp_req=1&output=vast&unviewed_position_start=1&env=vp&impl=s&correlator=';

        adsLoader.requestAds(adsRequest);
    }

    function onAdsManagerLoaded(adsManagerLoadedEvent) {
        adsManager = adsManagerLoadedEvent.getAdsManager(videoContent);

        adsManager.addEventListener(google.ima.AdErrorEvent.Type.AD_ERROR, onAdError);

        // When Ad is done -> Show real controls and Play video
        adsManager.addEventListener(google.ima.AdEvent.Type.CONTENT_RESUME_REQUESTED, function() {
            videoContent.controls = true;
            videoContent.play();
            adContainer.style.pointerEvents = 'none';
        });

        // When Ad starts -> Ensure controls are hidden
        adsManager.addEventListener(google.ima.AdEvent.Type.CONTENT_PAUSE_REQUESTED, function() {
            videoContent.controls = false;
            adContainer.style.pointerEvents = 'auto';
        });

        try {
            adsManager.init(videoContent.clientWidth, videoContent.clientHeight, google.ima.ViewMode.NORMAL);
            adsManager.start();
        } catch (adError) {
            console.log("Ad crash, playing video: " + adError);
            videoContent.controls = true;
            videoContent.play();
        }
    }

    function onAdError(adErrorEvent) {
        console.log("Ad Error: " + adErrorEvent.getError());
        if(adsManager) adsManager.destroy();

        // Fallback: If ad fails, play video immediately
        videoContent.controls = true;
        videoContent.play();
    }

    window.addEventListener('resize', function() {
        if(adsManager) {
            adsManager.resize(videoContent.clientWidth, videoContent.clientHeight, google.ima.ViewMode.NORMAL);
        }
    });
</script>
}

<script>
    async function toggleLike(isLike) {
        const videoId = @Model.Video.VideoId;
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        try {
            const response = await fetch(`?handler=ToggleLike&id=${videoId}&isLike=${isLike}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token
                }
            });

            if (response.ok) {
                const data = await response.json();
                if (data.success) {
                    // Update counts
                    document.getElementById('likeCount').innerText = data.likes;
                    document.getElementById('dislikeCount').innerText = data.dislikes;

                    // Update UI state
                    const btnLike = document.getElementById('btnLike');
                    const btnDislike = document.getElementById('btnDislike');
                    const iconLike = btnLike.querySelector('i');
                    const iconDislike = btnDislike.querySelector('i');
                    // Reset classes
                    btnLike.classList.remove('active');
                    btnDislike.classList.remove('active');
                    iconLike.className = "bi bi-hand-thumbs-up";
                    iconDislike.className = "bi bi-hand-thumbs-down";

                    if (data.userStatus === true) {
                        btnLike.classList.add('active');
                        iconLike.className = "bi bi-hand-thumbs-up-fill";
                    } else if (data.userStatus === false) {
                        btnDislike.classList.add('active');
                        iconDislike.className = "bi bi-hand-thumbs-down-fill";
                    }
                } else {
                    if(data.message === "Not logged in") {
                        window.location.href = "/Identity/Account/Login";
                    } else {
                        alert("Error: " + data.message);
                    }
                }
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>