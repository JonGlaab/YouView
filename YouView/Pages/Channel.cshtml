@page "{username?}"
@model YouView.Pages.ChannelModel
@{
    ViewData["Title"] = Model.IsOwner ? "My Channel" : $"{Model.ChannelUser.UserName}'s Channel";
}

<style>
    /* Match the off-white background from other pages */
    body {
        background-color: #F8F7F4; 
    }

    .section-title {
        font-weight: 800;
        font-size: 2.5rem;
        color: #222;
        text-align: center;
        margin-bottom: 30px;
        margin-top: 20px;
    }

    .video-card {
        background-color: #1F1F1F; 
        border-radius: 20px;
        padding: 20px;
        color: white;
        transition: transform 0.2s;
        height: 100%;
        position: relative;
        text-decoration: none; 
        display: block;
    }

    .video-card:hover {
        transform: scale(1.02); 
        cursor: pointer;
        color: white;
    }

    .video-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 15px;
        line-height: 1.4;
        color: white;
    }

    .thumbnail-container {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        width: 100%;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
        background-color: #000;
        margin-bottom: 15px;
    }

    .thumbnail-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .duration-badge {
        position: absolute;
        bottom: 8px;
        right: 8px;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: bold;
        pointer-events: none; /* Let clicks pass through */
    }
    
    .video-meta {
        font-size: 0.85rem;
        color: #aaa;
        margin-bottom: 15px;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
    }
    
    /* Brighter buttons for dark background */
    .btn-action {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        font-weight: 500;
    }
    
    .btn-action:hover {
        background-color: white;
        color: #1F1F1F;
    }
    
    .btn-action-primary {
        background-color: #0d6efd;
        border: 1px solid #0d6efd;
        color: white;
    }
    
    .btn-action-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }

    /* Playlist Section Styles */
    .playlist-card {
        background-color: #2C2C2C;
        border-radius: 15px;
        overflow: hidden;
        color: white;
        height: 100%;
        transition: transform 0.2s;
        cursor: pointer;
        text-decoration: none;
        display: block;
    }

    .playlist-card:hover {
        transform: translateY(-5px);
        color: white;
    }

    .playlist-thumbnail {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 */
        background-color: #000;
    }

    .playlist-overlay {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        width: 40%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .playlist-count {
        font-size: 1.2rem;
        font-weight: bold;
    }

    /* Tab Styles */
    .nav-tabs {
        border-bottom: 1px solid #ddd;
        margin-bottom: 30px;
    }

    .nav-tabs .nav-link {
        color: #555;
        font-weight: 600;
        border: none;
        border-bottom: 3px solid transparent;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .nav-tabs .nav-link:hover {
        color: #222;
        border-color: transparent;
    }

    .nav-tabs .nav-link.active {
        color: #0d6efd;
        border-bottom: 3px solid #0d6efd;
        background: transparent;
    }
</style>

<div class="container pb-5">
    
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h2 class="fw-bold">
            @(Model.IsOwner ? "My Channel" : Model.ChannelUser.UserName)
        </h2>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="channelTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="videos-tab" data-bs-toggle="tab" data-bs-target="#videos" type="button" role="tab" aria-controls="videos" aria-selected="true">Videos</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="playlists-tab" data-bs-toggle="tab" data-bs-target="#playlists" type="button" role="tab" aria-controls="playlists" aria-selected="false">Playlists</button>
        </li>
    </ul>

    <div class="tab-content" id="channelTabsContent">
        
        <!-- Videos Tab -->
        <div class="tab-pane fade show active" id="videos" role="tabpanel" aria-labelledby="videos-tab">
            @if (Model.Videos.Any())
            {
                <div class="row g-4">
                    @foreach (var video in Model.Videos)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="video-card shadow-sm">
                                
                                <div class="d-flex align-items-start mb-2">
                                    <i class="bi bi-play-circle me-2 fs-4 text-danger"></i>
                                    <div class="video-title text-truncate">@video.Title</div>
                                </div>

                                <div class="thumbnail-container">
                                    <img src="@(string.IsNullOrEmpty(video.ThumbnailUrl) ? "https://placehold.co/600x400/1F1F1F/white?text=No+Thumbnail" : video.ThumbnailUrl)" 
                                         class="thumbnail-img" 
                                         alt="@video.Title" />

                                    @if (!string.IsNullOrEmpty(video.Duration))
                                    {
                                        <span class="duration-badge">@video.Duration</span>
                                    }
                                </div>
                                
                                <div class="video-meta">
                                    <div>Uploaded: @video.CreatedAt.ToString("MMM dd, yyyy")</div>
                                    <div>Privacy: <span class="badge bg-secondary">@video.PrivacyStatus</span></div>
                                </div>

                                <div class="action-buttons">
                                    <a asp-page="/Watch" asp-route-id="@video.VideoId" class="btn btn-sm btn-action-primary flex-grow-1">View</a>
                                    <a asp-page="/EditVideo" asp-route-id="@video.VideoId" class="btn btn-sm btn-action flex-grow-1">Edit</a>
                                    <button type="button" class="btn btn-sm btn-action flex-grow-1" data-bs-toggle="modal" data-bs-target="#playlistModal" data-video-id="@video.VideoId">
                                        + Playlist
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <!-- Pagination -->
                @if (Model.HasMoreVideos)
                {
                    <div class="row mt-5">
                        <div class="col-12 text-center">
                            <a asp-page="./Channel" asp-route-cursor="@Model.NextCursor" class="btn btn-dark btn-lg px-5 rounded-pill shadow">
                                Next Page &rarr;
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <h4 class="text-muted">You haven't uploaded any videos yet.</h4>
                    <a asp-page="/Create" class="btn btn-lg btn-primary mt-3 rounded-pill px-5">Upload Your First Video</a>
                </div>
            }
        </div>

        <!-- Playlists Tab -->
        <div class="tab-pane fade" id="playlists" role="tabpanel" aria-labelledby="playlists-tab">
            
            <div class="d-flex justify-content-end mb-3">
                <button class="btn btn-success rounded-pill" data-bs-toggle="modal" data-bs-target="#createPlaylistModal">
                    <i class="bi bi-plus-lg me-1"></i> Create Playlist
                </button>
            </div>

            @if (Model.Playlists.Any())
            {
                <div class="row g-4">
                    @foreach (var playlist in Model.Playlists)
                    {
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="playlist-card shadow-sm" onclick="viewPlaylist(@playlist.PlaylistId)">
                                <div class="playlist-thumbnail">
                                    @if (playlist.PlaylistVideos.Any())
                                    {
                                        <img src="@playlist.PlaylistVideos.First().Video.ThumbnailUrl" class="thumbnail-img" alt="@playlist.Name">
                                    }
                                    else
                                    {
                                        <img src="https://placehold.co/600x400/1F1F1F/white?text=Empty" class="thumbnail-img" alt="Empty Playlist">
                                    }
                                    
                                    <div class="playlist-overlay">
                                        <span class="playlist-count" id="count-@playlist.PlaylistId">@playlist.PlaylistVideos.Count</span>
                                        <small>VIDEOS</small>
                                        <i class="bi bi-collection-play fs-3 mt-2"></i>
                                    </div>
                                </div>
                                <div class="p-3">
                                    <h5 class="mb-1 text-truncate">@playlist.Name</h5>
                                    <small class="text-white-50">Created @playlist.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <h4>No playlists created yet.</h4>
                    <p>Create a playlist to organize your videos.</p>
                </div>
            }
        </div>

    </div>
</div>

<!-- Add to Playlist Modal (For Videos) -->
<div class="modal fade" id="playlistModal" tabindex="-1" aria-labelledby="playlistModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="playlistModalLabel">Add to Playlist</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addToPlaylistForm">
                    <input type="hidden" id="modalVideoId" name="videoId" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Select Playlist:</label>
                        <div id="playlistList" class="list-group">
                            <!-- Playlists will be loaded here via JS -->
                            <div class="text-center py-3"><div class="spinner-border spinner-border-sm" role="status"></div> Loading...</div>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label for="newPlaylistName" class="form-label fw-bold">Create New Playlist:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="newPlaylistName" placeholder="Playlist Name">
                            <button class="btn btn-success" type="button" onclick="createPlaylist()">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Create Empty Playlist Modal -->
<div class="modal fade" id="createPlaylistModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Create New Playlist</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="emptyPlaylistName" class="form-label">Playlist Name</label>
                    <input type="text" class="form-control" id="emptyPlaylistName" placeholder="My Awesome Playlist">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createEmptyPlaylist()">Create</button>
            </div>
        </div>
    </div>
</div>

<!-- View/Edit Playlist Modal -->
<div class="modal fade" id="viewPlaylistModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="viewPlaylistTitle">Playlist Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <!-- Edit Controls -->
                <div class="d-flex gap-2 mb-3">
                    <input type="text" id="editPlaylistName" class="form-control" placeholder="Playlist Name">
                    <button class="btn btn-primary" onclick="renamePlaylist()">Rename</button>
                    <button class="btn btn-danger" onclick="deletePlaylist()">Delete</button>
                </div>
                <hr>

                <div id="playlistVideosList" class="list-group list-group-flush">
                    <!-- Videos load here -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const playlistModal = document.getElementById('playlistModal');
        const viewPlaylistModal = new bootstrap.Modal(document.getElementById('viewPlaylistModal'));
        const createPlaylistModal = new bootstrap.Modal(document.getElementById('createPlaylistModal'));
        
        let currentPlaylistId = 0; 

        // Restore active tab from localStorage on page load
        document.addEventListener("DOMContentLoaded", function() {
            const activeTab = localStorage.getItem('activeChannelTab');
            if (activeTab) {
                const tabTrigger = new bootstrap.Tab(document.querySelector(activeTab));
                tabTrigger.show();
            }
        });

        // Save active tab to localStorage when clicked
        const tabLinks = document.querySelectorAll('button[data-bs-toggle="tab"]');
        tabLinks.forEach(tab => {
            tab.addEventListener('shown.bs.tab', function (event) {
                localStorage.setItem('activeChannelTab', '#' + event.target.id);
            });
        });

        playlistModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const videoId = button.getAttribute('data-video-id');
            document.getElementById('modalVideoId').value = videoId;
            loadPlaylists(videoId);
        });
        
        // Refresh page when closing the main playlist modal to update counts
        playlistModal.addEventListener('hidden.bs.modal', function () {
            window.location.reload();
        });
        
        // Refresh page when closing the view/edit modal to update counts/thumbnails
        document.getElementById('viewPlaylistModal').addEventListener('hidden.bs.modal', function () {
            window.location.reload();
        });

        async function loadPlaylists(videoId) {
            const listContainer = document.getElementById('playlistList');
            listContainer.innerHTML = '<div class="text-center py-3"><div class="spinner-border spinner-border-sm"></div> Loading...</div>';

            try {
                const response = await fetch(`?handler=UserPlaylists&videoId=${videoId}`);
                const playlists = await response.json();

                listContainer.innerHTML = '';
                
                if (playlists.length === 0) {
                    listContainer.innerHTML = '<div class="text-muted small text-center">No playlists found. Create one below!</div>';
                    return;
                }

                playlists.forEach(p => {
                    const item = document.createElement('button');
                    item.type = 'button';
                    item.className = `list-group-item list-group-item-action d-flex justify-content-between align-items-center ${p.containsVideo ? 'active' : ''}`;
                    item.onclick = () => togglePlaylistVideo(p.playlistId, videoId, item);
                    
                    item.innerHTML = `
                        <span>${p.title}</span>
                        ${p.containsVideo ? '<i class="bi bi-check-circle-fill"></i>' : '<i class="bi bi-circle"></i>'}
                    `;
                    listContainer.appendChild(item);
                });

            } catch (error) {
                console.error('Error loading playlists:', error);
                listContainer.innerHTML = '<div class="text-danger small">Failed to load playlists.</div>';
            }
        }

        async function createPlaylist() {
            const nameInput = document.getElementById('newPlaylistName');
            const title = nameInput.value.trim();
            const videoId = document.getElementById('modalVideoId').value;
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            if (!title) return;

            try {
                const response = await fetch(`?handler=CreatePlaylist`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token 
                    },
                    body: JSON.stringify({ title: title })
                });

                if (response.ok) {
                    nameInput.value = '';
                    loadPlaylists(videoId); 
                } else {
                    alert('Failed to create playlist');
                }
            } catch (error) {
                console.error('Error creating playlist:', error);
            }
        }
        
        async function createEmptyPlaylist() {
            const nameInput = document.getElementById('emptyPlaylistName');
            const title = nameInput.value.trim();
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            if (!title) return;

            try {
                const response = await fetch(`?handler=CreateEmptyPlaylist`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token 
                    },
                    body: JSON.stringify({ title: title })
                });

                if (response.ok) {
                    window.location.reload(); // Reload to show new playlist
                } else {
                    alert('Failed to create playlist');
                }
            } catch (error) {
                console.error('Error creating playlist:', error);
            }
        }

        async function togglePlaylistVideo(playlistId, videoId, element) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            
            try {
                const response = await fetch(`?handler=TogglePlaylistVideo`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token 
                    },
                    body: JSON.stringify({ playlistId: playlistId, videoId: videoId })
                });

                if (response.ok) {
                    loadPlaylists(videoId);
                }
            } catch (error) {
                console.error('Error toggling video in playlist:', error);
            }
        }
        
        async function viewPlaylist(playlistId) {
            currentPlaylistId = playlistId;
            const listContainer = document.getElementById('playlistVideosList');
            const titleElement = document.getElementById('viewPlaylistTitle');
            const nameInput = document.getElementById('editPlaylistName');
            
            listContainer.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary"></div></div>';
            viewPlaylistModal.show();

            try {
                const response = await fetch(`?handler=PlaylistDetails&playlistId=${playlistId}`);
                if (!response.ok) throw new Error('Failed to load');
                
                const data = await response.json();
                titleElement.innerText = data.title;
                nameInput.value = data.title; 
                listContainer.innerHTML = '';

                if (data.videos.length === 0) {
                    listContainer.innerHTML = '<div class="text-center py-5 text-muted">This playlist is empty.</div>';
                    return;
                }

                data.videos.forEach(v => {
                    const item = document.createElement('div');
                    item.className = 'list-group-item d-flex gap-3 py-3 align-items-center';
                    item.innerHTML = `
                        <img src="${v.thumbnailUrl}" class="rounded" style="width: 120px; height: 68px; object-fit: cover;">
                        <div class="flex-grow-1">
                            <h6 class="mb-0 fw-bold"><a href="/Watch/${v.videoId}" class="text-decoration-none text-dark">${v.title}</a></h6>
                            <small class="text-muted">${v.author} â€¢ ${v.duration || ''}</small>
                        </div>
                        <button class="btn btn-sm btn-outline-danger" onclick="removeVideoFromPlaylist(${playlistId}, ${v.videoId}, this)">
                            <i class="bi bi-trash"></i>
                        </button>
                    `;
                    listContainer.appendChild(item);
                });

            } catch (error) {
                console.error(error);
                listContainer.innerHTML = '<div class="text-danger text-center py-4">Failed to load videos.</div>';
            }
        }

        async function renamePlaylist() {
            const newName = document.getElementById('editPlaylistName').value.trim();
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            if (!newName) return;

            try {
                const response = await fetch(`?handler=RenamePlaylist`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token 
                    },
                    body: JSON.stringify({ playlistId: currentPlaylistId, newName: newName })
                });

                if (response.ok) {
                    document.getElementById('viewPlaylistTitle').innerText = newName;
                    alert('Playlist renamed!');
                    window.location.reload();
                }
            } catch (error) {
                console.error(error);
            }
        }

        async function deletePlaylist() {
            if (!confirm("Are you sure you want to delete this playlist? This cannot be undone.")) return;

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const response = await fetch(`?handler=DeletePlaylist`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token 
                    },
                    body: JSON.stringify({ playlistId: currentPlaylistId })
                });

                if (response.ok) {
                    window.location.reload();
                }
            } catch (error) {
                console.error(error);
            }
        }

        async function removeVideoFromPlaylist(playlistId, videoId, btnElement) {
            if (!confirm("Remove this video from the playlist?")) return;
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const response = await fetch(`?handler=RemoveVideoFromPlaylist`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token 
                    },
                    body: JSON.stringify({ playlistId: playlistId, videoId: videoId })
                });

                if (response.ok) {
                    // Remove the item from the list visually
                    btnElement.closest('.list-group-item').remove();
                    
                    // If list is empty now, show message
                    const list = document.getElementById('playlistVideosList');
                    if (list.children.length === 0) {
                        list.innerHTML = '<div class="text-center py-5 text-muted">This playlist is empty.</div>';
                    }
                }
            } catch (error) {
                console.error(error);
            }
        }
    </script>
}